rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Announcements collection - public read, authenticated write
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Resources collection - public read, authenticated write
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Locations collection - public read, authenticated write
    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Supplies collection - public read, authenticated write
    match /supplies/{supplyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Support Sections collection - public read, authenticated write
    match /supportSections/{sectionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Support Items collection - public read, authenticated write
    match /supportItems/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

