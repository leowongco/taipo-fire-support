rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Announcements collection - public read, authenticated write (管理員手動添加的公告)
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // News collection - public read, authenticated write (自動抓取的新聞)
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Locations collection - public read, authenticated write
    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Event Stats collection - public read, authenticated write
    match /eventStats/{statsId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reconstruction Info collection - public read, authenticated write
    match /reconstructionInfo/{infoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // History Records collection - public read, authenticated write
    match /historyRecords/{recordId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Financial Aid collection - public read, authenticated write
    match /financialAid/{aidId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Services collection - public read, authenticated write
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Relief Services collection - public read, authenticated write
    match /reliefServices/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
